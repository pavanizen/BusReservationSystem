            <div class="form-group">
                <label asp-for="BusName">Bus Name</label>

                <input style="border-radius:100px" asp-for="BusName" />
                <span asp-validation-for="BusName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Category">Category</label>
               
               
                <div>
                    <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList(typeof(Bus.DomainModels.Models.Category))"> </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Capacity">Capacity</label>

                <input style="border-radius:100px" asp-for="Capacity" />
                <span asp-validation-for="Capacity" class="text-danger"></span>

            </div>

            <div style="text-align:center" class="row">
                <input style="padding:10px;border-radius:10px;margin:20px" type="submit" class="btn btn-primary" value="Save" />


                <a style="padding:10px;border-radius:10px;margin:20px" class="btn btn-danger" asp-action="Index" asp-controller="Travel">Cancel</a>
            </div>
        </form>
    </div>
</div>

