<div class="form-row">
    <div style="font-family: -webkit-body;font-weight:bold;color:black" class="container">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form class="horizontal" asp-action="Create" method="post">
            @*<div class="form-group col-md-11">
                <label asp-for="BusId">Bus Id</label>

                <input style="width:189px;margin:18px;border-radius:100px" asp-for="BusId" />
