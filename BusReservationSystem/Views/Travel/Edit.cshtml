@model Bus.DomainModels.Models.BusDetails
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Bus</h1>

<body style="
    background-image:url('/images/pattern.jpg');
    background-size:cover;
    background-repeat:no-repeat;
    background-position:center center">



</body>

<form class="horizontal" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @*<div class="form-group">
            <label asp-for="BusId">BusId:</label>
            <input asp-for="BusId" value="@Model.BusId" />
        </div>*@
    <div class="form-group col-md-3">
        <label asp-for="BusName">BusName:</label>
        <input asp-for="BusName" value="@Model.BusName" class="form-control input-md" />
    </div>
    <div class="form-group">
        <label asp-for="Category" class="col-md-2 control-label"></label>
        <input asp-for="Category" value="@Model.Category" class="form-control input-md" />
        
    </div>
    

    <div class="form-group col-md-3">
        <label asp-for="Capacity">Capacity</label>
        <input asp-for="Capacity" value="@Model.Capacity" class="form-control input-md" />
    </div>

  
    <div>
        <br />
        <input type="submit" class="btn btn-primary" value="Edit" />
        <a class="btn btn-danger" asp-action="Index" asp-controller="Travel">Cancel</a>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
