@model Bus.DomainModels.Models.Route

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<body style="
    background-image:url('/images/pattern.jpg');
    background-size:cover;
    background-repeat:no-repeat;
    background-position:center center">

</body>


<form class="horizontal" asp-action="Create" method="post">
    @*<div class="form-group">
            <label asp-for="RouteId">RouteId:</label>
            <input asp-for="RouteId" />
        </div>*@
    <div class="form-group">
        <label asp-for="FromLocation" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <select asp-for="FromLocation" class="form-control">
                <option value="Bangalore">Bangalore</option>
                <option value="Hyderabad">Hyderabad</option>
                <option value="Pune">Pune</option>
            </select>
            <span asp-validation-for="FromLocation" class="text-danger"></span>
        </div>
        <br />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ToLocation" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="ToLocation" class="form-control" placeholder="Enter To Location" />
            <span asp-validation-for="ToLocation" class="text-danger"></span>
        </div>
        <br />
    </div>
    <br />

    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="Price" class="form-control" placeholder="Enter Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <br />
    </div>
    <br />


    <div style="margin-left:200px">
        <input type="submit" class="btn btn-primary" value="Save" />
        <a class="btn btn-danger" asp-action="Index" asp-controller="Route">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

