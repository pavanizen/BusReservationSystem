@model Bus.DomainModels.Models.Trip
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<body style="
    background-image:url('/images/pattern.jpg');
    background-size:cover;
    background-repeat:no-repeat;
    background-position:center center">

</body>
<form class="horizontal" asp-action="Create" method="post">
    @*<div class="form-group">
            <label asp-for="TripID">TripID</label>
            <input asp-for="TripID" />
        </div>*@

 

    <div class="form-group">
        <label asp-for="RouteID" class="col-md-2 control-label">RouteID</label>
        <div class="col-md-4">
            <input asp-for="RouteID" class="form-control" placeholder="Enter Route Id"  />
            <span asp-validation-for="RouteID" class="text-danger"></span>
            </div>
        </div>
    <div class="form-group">
        <label asp-for="BusID" class="col-md-2 control-label">BusID</label>
        <div class="col-md-4">
            <input asp-for="BusID" class="form-control" placeholder="Enter Bus Id" />
            <span asp-validation-for="BusID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="JourneyDate" class="col-md-2 control-label">JourneyDate</label>
        <div class="col-md-4">
            <input asp-for="JourneyDate" class="form-control" placeholder="Enter Journey Date" />
            <span asp-validation-for="JourneyDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AvailableSeats" class="col-md-2 control-label">AvailableSeats</label>
        <div class="col-md-4">
            <input asp-for="AvailableSeats" class="form-control" placeholder="Enter Available Seats" />
            <span asp-validation-for="AvailableSeats" class="text-danger"></span>
        </div>
    </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Save" />
        
            <a class="btn btn-default" asp-action="Index" asp-controller="Schedule">Cancel</a>
        </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}